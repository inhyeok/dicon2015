extends layout

block style
  link(rel = "stylesheet" href = "/style/dist/vote.css")
block script
  script(type = "text/javascript" src = "/js/dist/vote_ok.js")

block content
  #vote.container-fluid
    .content
      .row
        .col-md-12.text-center
          h2= vote.question
      form(action='/vote/'+vote.id method='POST')
        .row
          .col-sm-12
            ul#answer_list
              for answer in vote.answer.split("\n")
                .form-group
                  li.form-control
                    input#answer(type='checkbox' value=answer name='answer')
                    | &nbsp;&nbsp;
                    span= answer
              if vote.ath === 'Y'
                .form-group
                  span 기타 답변
                  li
                    input.form-control(type='text' name='answer' placeholder='보기 이외의 답변을 할 수 있습니다.')
        .row
          .col-sm-4.col-sm-offset-4
            if user.u_id !== vote.u_id
              .form-group
                button#voteOkBtn.btn.btn-block(type='submit' onclick='vote_ok()') 투표하기
          if user.u_id === vote.u_id
            .col-sm-4
              .form-group.text-right
                a(href='/vote/update/'+vote.id) 수정하기

        if user.u_id === vote.u_id
          hr
          .row
            .col-sm-12
              h1 결과
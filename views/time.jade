extends layout

block style

block script

block content
  #mainBox.container-fluid
    .content
      #all-table.row
        h3 마감임박 조사
        table.table.table-hover
          thead.text-center
            tr
              td.col-sm-6.col-xs-6 제목
              td.col-sm-2.col-xs-2 조회수
              td.col-sm-2.col-xs-2 등록일
              td.col-sm-2.col-xs-2 마감일
          tbody
            if vote_list.length
              for vote in vote_list
                tr
                  td
                    a(href='/vote/'+vote.id)= vote.question
                  td.text-center= vote.count
                  td.text-center= moment(vote.create_time).format('YYYY-MM-DD HH:mm')
                  td.text-center= moment(vote.finish_time).format('YYYY-MM-DD HH:mm')
            else
              tr
                td(colspan=4).text-center
                  span 해당되는 조사가 없습니다.

  #footer.container.visible-sm.visible-lg
    hr
    .row
      .col-sm-4
        strong 2015 홀가분 (HOLGABUN)
      .col-sm-3.col-sm-offset-5.text-right
